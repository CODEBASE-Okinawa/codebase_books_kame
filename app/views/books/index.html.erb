<h1>トップページ</h1>
<p>本の一覧ページです。</p>

<%# @books.each do |book| %>
<p> <%#= book[:title] %> </p>
<p> <%#= image_tag book[:image] %> </p>
<p> <%#= book[:auther] %> </p>
<%# end %>


<div class="wrapper">

    <% @books.each do |book| %>
        <div class="index_list_wrap">
            <div class="index_image_wrap">
                <%= image_tag book.image , class: "index_image" %>
            </div>
            <div>
                <p class="index_list_title">『<%= book.title%>』</p>
                <p class="index_auther"><%= book.author%>&nbsp;著</p>
            </div>
        </div>
    <% end %>

</div>

