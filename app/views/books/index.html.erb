<h1>トップページ</h1>
<p>本の一覧ページです。</p>

<%# 管理者ページの本登録画面のリンク　※一時的にbootstrap用のクラス名を入れています。 %>
<%= link_to '本の登録', new_book_path, class: 'btn btn-primary' %>

<div class="wrapper">

    <% @books.each do |book| %>
        
        
        <%= link_to book_path(book.id) do %>
        
            <div class="index_list_wrap">
                <div class="index_image_wrap">
                    <%= image_tag book.image , class: "index_image" %>
                </div>
                <div>
                    <p class="index_list_title">『&nbsp;<%= book.title%>&nbsp;』</p>
                    <p class="index_auther">&nbsp;&nbsp;&nbsp;<%= book.author%>&nbsp;著</p>
                </div>
            </div>

        <% end %>
        
    <% end %>

</div>



