<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @book) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :image %>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>

      <%= f.submit "本を登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>