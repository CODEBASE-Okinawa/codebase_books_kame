<div class="row">
  <div class="col-md-6 col-md-offset-3">
  

    <%= form_with(model: @lending, local: true)  do |f| %>
      <label class="control-label" for="">本を借りた日</label>
      <%= f.date_select :lend_date, {}, class: 'form-control' %>

      <%= f.submit "本を借りる", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>