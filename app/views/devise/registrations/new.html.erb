<div class="usr_login_title">
  <h1>CODEBASE BOKS</h1>

  <div class="usr_login">
    <h2>新規登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p>
        <%= render "devise/shared/error_messages", resource: resource %>
      </p>

      <p>
        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", :size=>"40" %>
        </div>
      </p>

      <p>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
        </div>
      </p>

      <p>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :size=>"40" %><br />
          <input type="checkbox" id="toggle_password" onClick='passwordShowHide();' >
          <label>パスワードを表示する</label>
        </div>
      </p>

      <p>
        <div class="field">
          <%= f.label :password_confirmation, "password確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"40" %>
        </div>
      </p>

      <p>
        <div class="actions">
          <%= f.submit "登録する" %>
        </div>
      </p>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

