<div class="wrapper">
    <h3 class="page_title">予約した本一覧</h3>

    <% if !@reservation_books.nil? %>
        <% @reservation_books.each do |reservation_book| %>
            <%= link_to reservation_path(reservation_book.book_id), class: "index_wrap" do %>
                <div class="index_list_wrap">
                    <div class="index_image_wrap">
                        <%= image_tag reservation_book.book.image , class: "index_image" %>
                    </div>
                    <div>
                        <p class="index_list_title">『&nbsp;<%= reservation_book.book.title%>&nbsp;』</p>
                        <p class="index_auther"><span class="ml-15"><%= reservation_book.book.author%></span><span class="ml-10">著</span></p>
                        <p class="index_res_period">
                            <%= reservation_book.reserved_start %>  から  <%= reservation_book.reserved_end %> まで
                        </p>
                    </div>
                </div>
            <% end %>
        <% end %>
    <% end %>
</div>